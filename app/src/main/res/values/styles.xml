<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Toolbar">
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="android:textColorSecondary">@color/toolbar_text</item>
        <item name="colorControlNormal">@color/toolbar_controls</item>
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">?colorControlNormal</item>
    </style>

    <style name="Toolbar.Popup">
        <item name="android:colorBackground">@color/accent</item>
    </style>
</resources>
